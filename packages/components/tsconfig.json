{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2019"
        ],
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ES2016",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "jsx": "preserve",
        "baseUrl": "src",
        "paths": {
            "@app/*": [
                "./*"
            ],
            "@app/constants": [
                "./constants"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}