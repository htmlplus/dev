{
  "name": "@htmlplus/transformer",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:swc": "",
    "build:tsc": "npm run clean && tsc",
    "build:swc:watch": "swc src -d dist -w",
    "build:tsc:watch": "tsc -w",
    "clean": "rimraf dist",
    "start:swc": "concurrently \"npm run build:swc:watch\" \"nodemon --experimental-specifier-resolution=node dist/test\"",
    "start:tsc": "concurrently \"npm run build:tsc:watch\" \"nodemon --experimental-specifier-resolution=node dist/test\""
  },
  "devDependencies": {
    "@babel/generator": "^7.16.0",
    "@babel/parser": "^7.16.4",
    "@babel/traverse": "^7.16.3",
    "@babel/types": "^7.16.0",
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.111",
    "case": "^1.6.3",
    "chokidar": "^3.5.2",
    "concurrently": "^6.4.0",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "sass": "^1.43.4",
    "typescript": "^4.5.2"
  }
}
