{
  "compilerOptions": {
    "target": "ES2016",
    "lib": [  
      "dom",
      "es2019"
    ],
    "jsx": "preserve",
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@app/*": [
          "./*"
      ],
      "@app/constants": [
          "./constants"
      ]
    },
    "declaration": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": false,
  },
  "include": [
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}