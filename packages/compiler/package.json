{
  "name": "@htmlplus/compiler",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "build:watch": "tsc -w",
    "clean": "rimraf dist",
    "start": "concurrently \"npm run build:watch\" \"nodemon --experimental-specifier-resolution=node dist/test\"",
    "start:new": "nodemon --watch src --exec node --experimental-specifier-resolution=node --loader ts-node/esm src/test.ts"
  },
  "devDependencies": {
    "@babel/generator": "^7.16.0",
    "@babel/parser": "^7.16.4",
    "@babel/traverse": "^7.16.3",
    "@babel/types": "^7.16.0",
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.11.11",
    "case": "^1.6.3",
    "concurrently": "^6.4.0",
    "esbuild": "^0.14.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.0",
    "prettier-plugin-packagejson": "^2.2.15",
    "rimraf": "^3.0.2",
    "sass": "^1.43.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "uhtml": "^2.7.6"
  }
}
